<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Submit Text Form</title>
    <!-- Inline CSS for styling -->

    <style>
        :root {
            --dark: #333;
            /* Define dark color */
            --dark-grey: #666;
            /* Define dark grey color */
            --primary: #007bff;
            /* Define primary color */
            --light: #fff;
            /* Define light color */
            --dark-primary: #0056b3;
            /* Define dark primary color */
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }


        /* Form container */
        .form-container {
            max-width: 400px;
            /* Set maximum width */
            margin: 0 auto;
            /* Center the form horizontally */
        }

        /* Heading */
        .form-container h1 {
            font-size: 24px;
            /* Font size */
            margin-bottom: 20px;
            /* Bottom margin */
            color: var(--dark);
            /* Text color */
        }

        /* Label */
        .form-container label {
            font-size: 16px;
            /* Font size */
            color: var(--dark);
            /* Text color */
            display: block;
            /* Make it a block element */
            margin-bottom: 10px;
            /* Bottom margin */
        }

        /* Input field */
        .form-container input[type="text"] {
            width: 100%;
            /* Full width */
            padding: 10px;
            /* Padding */
            margin-bottom: 20px;
            /* Bottom margin */
            border: 1px solid var(--dark-grey);
            /* Border */
            border-radius: 6px;
            /* Rounded corners */
            font-size: 16px;
            /* Font size */
            box-sizing: border-box;
            /* Include padding and border in width calculation */
        }

        /* Submit button */
        .form-container input[type="submit"] {
            background-color: var(--primary);
            /* Primary color */
            color: var(--light);
            /* Text color */
            padding: 12px 24px;
            /* Padding */
            font-size: 16px;
            /* Font size */
            border: none;
            /* Remove border */
            border-radius: 6px;
            /* Rounded corners */
            cursor: pointer;
            /* Cursor style */
            transition: background-color 0.3s ease;
            /* Smooth transition */
        }

        .form-container input[type="submit"]:hover {
            background-color: var(--dark-primary);
            /* Darken color on hover */
        }
    </style>

</head>

<body>
    <div class="form-container">
        <h1>Submit Your Text</h1>
        {{!-- <form action="/admin/projects/add" method="POST">
            <label for="user_input">Enter your text:</label>
            <input type="text" name="description" id="description" placeholder="Type something..." required>
            <input type="submit" value="Submit">
        </form> --}}
        <form action="/admin/projects/add" method="POST">
            <label for="description">Project Description:</label>
            <input type="text" name="description" id="description" placeholder="Type something..." required>

            <label>Select Users to Assign:</label>
            <div class="user-checkboxes">
                <!-- Example user checkboxes -->
                <input type="checkbox" name="assignedUsers" value="user1">
                <label for="user1">User 1</label><br>

                <input type="checkbox" name="assignedUsers" value="user2">
                <label for="user2">User 2</label><br>

                <!-- Add more checkboxes for each user -->
            </div>

            <input type="submit" value="Submit">
        </form>
    </div>
</body>

</html>